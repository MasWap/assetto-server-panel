{# templates/home/index.html.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Accueil - Liste de Produits</title>
    <link href="{{ asset('build/styles.css') }}" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-semibold mb-8">Nos Produits</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for product in products %}
                <div class="bg-white rounded-lg overflow-hidden shadow-md">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold mb-2">{{ product.name }}</h2>
                        <p class="text-gray-700 mb-4">{{ product.description }}</p>
                        <p class="text-gray-800"><strong>Prix :</strong> {{ product.price }} â‚¬</p>
                        <a href="{{ path('product_detail', { 'id': product.id }) }}" class="block bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 mt-4 rounded">Voir le produit</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    {% block javascripts %}
        <script src="{{ asset('build/app.js') }}"></script>
    {% endblock %}
</body>
</html>
